<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.activites.LoginIntro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inder"

            android:text="Manage Deck"
            android:textColor="@color/darkblue"
            android:textSize="35dp"
            android:textStyle="normal"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/images"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_marginTop="20dp"

            android:src="@drawable/meeting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/font"/>

        <TextView
            android:id="@+id/started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Get Started"
            android:textColor="@color/darkblue"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/images"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:gravity="center"
            android:fontFamily="@font/inder"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collaborate and Plan together Across Multiple Devices on Manage Deck"

            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:gravity="center"

            android:textColor="@color/darkblue"
            android:layout_margin="15dp"
            android:id="@+id/introlines"
            app:layout_constraintTop_toBottomOf="@+id/started"
            android:fontFamily="@font/inder"

            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Sign In"
            android:id="@+id/signin"
            app:layout_constraintTop_toBottomOf="@+id/introlines"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:background="@drawable/siignin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/inder"
            android:elevation="10dp"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="Sign Up"
            android:id="@+id/signup"
            android:elevation="10dp"

            app:layout_constraintTop_toBottomOf="@+id/signin"
            android:layout_marginTop="20dp"
            android:textColor="@color/darkblue"
            android:background="@drawable/signup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/inder"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>